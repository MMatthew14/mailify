{
  
  "manifest_version": 3,
  "name": "Mailify",
  "version": "1.0",
  "icons": {
    "128": "assets/icon/iconSakurajimaMai.png"
  },
  "description": "Make every YouTube Thumbnail into Sakurajima Mai!",
  "host_permissions": ["https://www.youtube.com/*"],
  "permissions": [
    "storage"
  ],

 
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],
 
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/*.PNG",
        "assets/popup/*.jpeg",
        "assets/popup/*.webp",
        "assets/popup/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
 
  "action": {
    "default_popup": "popup.html"
  },


  "browser_specific_settings": {
  "gecko": {
    "id": "Mailify@MMatt14.com",
    "strict_min_version": "109.0"
  }
}

}
